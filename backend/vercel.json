{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/index.html"
      }
    ],
    "env": {
      "MONGO_URI": "@mongo_uri",
      "VITE_BASE_APP_BACKEND_BASEURL": "@vite_backend_url"
    }
  }
  